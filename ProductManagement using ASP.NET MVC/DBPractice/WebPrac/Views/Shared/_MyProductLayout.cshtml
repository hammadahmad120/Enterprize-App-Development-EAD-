                    <a href="/User/EditUser">Edit Profile</a></li>
                <li> <a href="/User/ChangePassword">Update Password</a></li>
</ul>
            </div>
        </nav>

                <h1 class="text-danger"> Welcome @WebPrac.Security.SessionManager.User.Name</h1>
                <span style="color:red">@TempData["Message"]</span>
                <div class="text-danger">
                    @RenderBody()
                </div>
</body>
</html>
